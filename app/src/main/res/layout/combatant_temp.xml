<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/combatantLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/iv_picture"
        app:layout_constraintTop_toTopOf="@+id/iv_picture" />

    <TextView
        android:id="@+id/tv_hp"
        android:layout_width="34dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:text="0000"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/lbl_hp"
        app:layout_constraintTop_toTopOf="@+id/lbl_hp" />

    <TextView
        android:id="@+id/tv_hpMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="0000"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/lbl_slash"
        app:layout_constraintTop_toTopOf="@+id/lbl_slash" />

    <TextView
        android:id="@+id/tv_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/lbl_cond"
        app:layout_constraintTop_toTopOf="@+id/lbl_cond" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_picture" />

    <TextView
        android:id="@+id/lbl_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="HP:"
        android:textColor="#FF5722"
        app:layout_constraintStart_toEndOf="@+id/iv_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/lbl_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="#FF5722"
        app:layout_constraintStart_toEndOf="@+id/tv_hp"
        app:layout_constraintTop_toTopOf="@+id/tv_hp" />

    <TextView
        android:id="@+id/lbl_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="Condition:"
        android:textColor="#FF5722"
        app:layout_constraintStart_toEndOf="@+id/iv_picture"
        app:layout_constraintTop_toBottomOf="@+id/lbl_hp" />

    <TextView
        android:id="@+id/lbl_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="Initiative:"
        android:textColor="#FF5722"
        app:layout_constraintStart_toEndOf="@+id/iv_picture"
        app:layout_constraintTop_toBottomOf="@+id/lbl_cond" />

    <TextView
        android:id="@+id/lbl_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="AC:"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_init"
        app:layout_constraintStart_toEndOf="@+id/tv_init" />

    <TextView
        android:id="@+id/tv_init"
        android:layout_width="35dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/lbl_init"
        app:layout_constraintTop_toTopOf="@+id/lbl_init" />

    <TextView
        android:id="@+id/tv_ac"
        android:layout_width="35dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tv_init"
        app:layout_constraintStart_toEndOf="@+id/lbl_ac" />

</androidx.constraintlayout.widget.ConstraintLayout>